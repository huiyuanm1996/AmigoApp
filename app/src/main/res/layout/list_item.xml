<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:padding="3dip">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignEnd="@+id/thumbnail"
        android:layout_alignRight="@+id/thumbnail" />

    <!-- Name of contact-->
    <TextView
        android:id="@+id/name"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Bobbit Ronson"
        android:textColor="#040404"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Location -->
    <TextView
        android:id="@+id/location"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/mappin"
        android:layout_marginEnd="22dp"
        android:layout_toRightOf="@+id/mappin"
        android:text="Fake Town"
        android:textColor="#343434"
        android:textSize="12sp"
        android:layout_marginRight="22dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/location"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/location" />

    <ImageView
        android:id="@+id/mappin"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_below="@+id/name"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        app:srcCompat="@drawable/map_pin_black" />

</RelativeLayout>